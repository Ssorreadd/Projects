<Page x:Class="Project_07.MainReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_07"
      mc:Ignorable="d" 
      d:DesignHeight="360.8" d:DesignWidth="884"
      Title="MainReportPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="146*"/>
            <ColumnDefinition Width="146*"/>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="186*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="58*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Frame x:Name="MainReportFrame" Grid.Row="0" Grid.ColumnSpan="7" Grid.RowSpan="7"/>

        <ComboBox x:Name="FormsOfReport" Grid.Column="4" Margin="10" Background="AliceBlue" SelectionChanged="FormsOfReport_SelectionChanged"/>
    </Grid>
</Page>
